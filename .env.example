# Frontend (Vite) - prefix with VITE_ to expose to browser
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_anon_key
VITE_API_URL=  # Leave empty for same-origin API calls

# Backend (Vercel Serverless Functions)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your_service_key

# Background refresh endpoint authentication (for GitHub Actions workflow)
# Generate with: openssl rand -hex 32
REFRESH_SECRET=your_random_secret_here
REFRESH_URL=https://your-deployment.vercel.app/api/refresh-prices

# Optional: Admin password for viewing any private portfolio
ADMIN_PASSWORD=your_admin_password

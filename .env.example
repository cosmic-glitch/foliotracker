# Frontend (Vite) - prefix with VITE_ to expose to browser
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_anon_key
VITE_API_URL=  # Leave empty for same-origin API calls

# Backend - Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your_service_key
SUPABASE_DB_URL=postgresql://postgres:password@db.your-project.supabase.com:5432/postgres

# Backend - OpenAI (for AI hot takes, chat, and deep research)
OPENAI_API_KEY=sk-...

# Backend - Redis Cache (Upstash)
UPSTASH_REDIS_REST_KV_REST_API_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_KV_REST_API_TOKEN=your_upstash_token

# Backend - Background Jobs (cron authentication)
# Generate with: openssl rand -hex 32
REFRESH_SECRET=your_random_secret_here

# Admin override for viewing any private portfolio (optional)
ADMIN_PASSWORD=your_admin_password
